{
    "name": "default",
    "description": "默认主题",
    "author": "zodream",
    "cover": "assets/images/screenshot.png",
    "script": [{
            "action": "copy",
            "src": "assets",
            "dist": "assets"
        },
        {
            "action": "option",
            "data": [{
                "name": "主题",
                "code": "theme",
                "type": "text",
                "value": "default",
                "default": ""
            }]
        },
        {
            "action": "group",
            "name": "nav"
        },
        {
            "action": "model",
            "name": "新闻",
            "table": "news",
            "fields": [{
                    "name": "作者",
                    "field": "author",
                    "type": "text"
                },
                {
                    "name": "是否原创",
                    "field": "is_new",
                    "type": "swicth"
                },
                {
                    "name": "源网址",
                    "field": "source_url",
                    "type": "text"
                }
            ]
        },
        {
            "action": "model",
            "name": "图片",
            "table": "images",
            "fields": [{
                    "action": "disable",
                    "field": "content"
                },
                {
                    "name": "图片",
                    "field": "image",
                    "type": "file"
                }
            ]
        },
        {
            "action": "model",
            "name": "主题",
            "table": "themes",
            "fields": [{
                "name": "文件",
                "field": "file",
                "type": "file"
            }]
        },
        {
            "action": "model",
            "name": "应用",
            "table": "apps",
            "fields": [{
                    "name": "使用说明",
                    "field": "instruction",
                    "type": "editor"
                },
                {
                    "name": "wind",
                    "field": "win",
                    "type": "file"
                },
                {
                    "name": "linux",
                    "field": "linux",
                    "type": "file"
                },
                {
                    "name": "APK",
                    "field": "apk",
                    "type": "file"
                },
                {
                    "name": "IPA",
                    "field": "ipa",
                    "type": "file"
                },
                {
                    "name": "UWP",
                    "field": "uwp",
                    "type": "file"
                },
                {
                    "name": "作者信息",
                    "field": "author",
                    "type": "textarea"
                }
            ]
        },
        {
            "action": "channel",
            "title": "应用市场",
            "name": "app_market",
            "type": "@model:apps",
            "group": "nav",
            "children": [{
                    "title": "实用工具",
                    "name": "app_tool",
                    "type": "@model:apps"
                },
                {
                    "title": "操作系统",
                    "name": "app_system",
                    "type": "@model:apps"
                }
            ]
        },
        {
            "action": "channel",
            "title": "主题市场",
            "name": "theme_market",
            "type": "@model:themes",
            "group": "nav",
            "children": [{
                    "title": "企业官网",
                    "name": "company_theme",
                    "type": "@model:themes"
                },
                {
                    "title": "博客",
                    "name": "blog_theme",
                    "type": "@model:themes"
                }
            ]
        },
        {
            "action": "channel",
            "title": "新闻动态",
            "name": "news",
            "type": "@model:news",
            "group": "nav",
            "children": [{
                    "title": "站点动态",
                    "name": "web_news",
                    "type": "@model:news",
                    "group": "nav"
                },
                {
                    "title": "全球新闻",
                    "name": "all_news",
                    "type": "@model:news",
                    "group": "nav"
                }
            ]
        },
        {
            "action": "channel",
            "title": "关于我们",
            "name": "about_us",
            "type": "page",
            "content": "",
            "group": "nav"
        },
        {
            "action": "channel",
            "title": "首页Banner",
            "name": "banner",
            "type": "@model:images"
        },
        {
            "action": "content",
            "type": "@channel:web_news",
            "title": "站点开启",
            "content": "",
            "thumb": "assets/images/thumb.png"
        }
    ]
}